---
// Header component
const currentPath = Astro.url.pathname;

// Helper function to check if current page is active  
function isActive(path: string) {
  // Normalize currentPath by removing trailing slash if it exists
  const normalizedCurrentPath = currentPath.endsWith('/') && currentPath !== '/' 
    ? currentPath.slice(0, -1) 
    : currentPath;
  
  // Handle home page
  if (path === '') {
    return normalizedCurrentPath === '/' || normalizedCurrentPath === '';
  }
  
  // Normalize the path parameter by removing trailing slash
  const normalizedPath = path.endsWith('/') ? path.slice(0, -1) : path;
  
  // Check if paths match
  return normalizedCurrentPath === normalizedPath;
}
---

<header class="bg-ivory border-b border-taupe/20 sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href={import.meta.env.BASE_URL} class="flex items-center">
        <span class="font-serif text-xl md:text-2xl text-coal font-medium tracking-tight">
          Nails By Sara Sofie
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a 
          href={import.meta.env.BASE_URL} 
          class={`transition-colors ${isActive('') ? 'text-pink' : 'text-coal hover:text-pink'}`}
        >
          Hjem
        </a>
        <a 
          href={`${import.meta.env.BASE_URL}tjenester`} 
          class={`transition-colors ${isActive('/tjenester') ? 'text-pink' : 'text-coal hover:text-pink'}`}
        >
          Tjenester
        </a>
        <a 
          href={`${import.meta.env.BASE_URL}galleri`} 
          class={`transition-colors ${isActive('/galleri') ? 'text-pink' : 'text-coal hover:text-pink'}`}
        >
          Galleri
        </a>
        <a 
          href={`${import.meta.env.BASE_URL}kontakt`} 
          class={`transition-colors ${isActive('/kontakt') ? 'text-pink' : 'text-coal hover:text-pink'}`}
        >
          Kontakt
        </a>
      </nav>

      <!-- CTA Button -->
      <a 
        href="https://www.fresha.com/nb/book-now/nails-by-sara-sofie-aoar71eq/services?lid=2696667&eid=4757759&share=true&pId=2609801"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary" 
        aria-label="Book time"
      >
        Book time
      </a>

      <!-- Mobile menu button -->
      <button class="md:hidden" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav class="md:hidden hidden" id="mobile-menu">
      <div class="py-4 space-y-2">
        <a 
          href={import.meta.env.BASE_URL} 
          class={`block py-2 transition-colors ${isActive('') ? 'text-pink' : 'text-coal hover:text-pink'}`}
        >
          Hjem
        </a>
        <a 
          href={`${import.meta.env.BASE_URL}tjenester`} 
          class={`block py-2 transition-colors ${isActive('/tjenester') ? 'text-pink' : 'text-coal hover:text-pink'}`}
        >
          Tjenester
        </a>
        <a 
          href={`${import.meta.env.BASE_URL}galleri`} 
          class={`block py-2 transition-colors ${isActive('/galleri') ? 'text-pink' : 'text-coal hover:text-pink'}`}
        >
          Galleri
        </a>
        <a 
          href={`${import.meta.env.BASE_URL}kontakt`} 
          class={`block py-2 transition-colors ${isActive('/kontakt') ? 'text-pink' : 'text-coal hover:text-pink'}`}
        >
          Kontakt
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script> 