    <!-- Simple GDPR Cookie Consent -->
    <script>
      // Enkel og p√•litelig cookie-samtykke l√∏sning
      
      // Google Analytics funksjonalitet
      window.loadGoogleAnalytics = function() {
        if (document.querySelector('script[src*="googletagmanager.com/gtag/js"]')) {
          console.log('Google Analytics already loaded');
          return;
        }
        
        const script = document.createElement('script');
        script.async = true;
        script.src = 'https://www.googletagmanager.com/gtag/js?id=G-TQKDPTFG2K';
        document.head.appendChild(script);
        
        script.onload = function() {
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          window.gtag = gtag;
          
          gtag('js', new Date());
          gtag('config', 'G-TQKDPTFG2K', {
            'anonymize_ip': true,
            'allow_google_signals': false,
            'allow_ad_personalization_signals': false
          });
          
          console.log('‚úÖ Google Analytics loaded');
        };
      };

      window.disableGoogleAnalytics = function() {
        // Slett Google Analytics cookies
        const cookies = ['_ga', '_gid', '_gat_gtag_G_TQKDPTFG2K'];
        cookies.forEach(name => {
          document.cookie = `${name}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/; domain=.${window.location.hostname};`;
          document.cookie = `${name}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
        });
        
        if (typeof window.gtag === 'function') {
          window.gtag('consent', 'update', {
            'analytics_storage': 'denied'
          });
        }
        
        console.log('‚ùå Google Analytics disabled');
      };

      // Cookie banner funksjonalitet
      function showCookieBanner() {
        const banner = document.getElementById('cookie-banner');
        if (banner) {
          banner.style.display = 'block';
          banner.style.animation = 'slideUp 0.5s ease-out';
        }
      }

      function hideCookieBanner() {
        const banner = document.getElementById('cookie-banner');
        if (banner) {
          banner.style.animation = 'slideDown 0.5s ease-out';
          setTimeout(() => {
            banner.style.display = 'none';
          }, 500);
        }
      }

      window.acceptCookies = function() {
        localStorage.setItem('cookie-consent', 'accepted');
        localStorage.setItem('cookie-consent-date', new Date().toISOString());
        hideCookieBanner();
        window.loadGoogleAnalytics();
        console.log('‚úÖ Cookies accepted');
      };

      window.declineCookies = function() {
        localStorage.setItem('cookie-consent', 'declined');
        localStorage.setItem('cookie-consent-date', new Date().toISOString());
        hideCookieBanner();
        window.disableGoogleAnalytics();
        console.log('‚ùå Cookies declined');
      };

      window.showCookieSettings = function() {
        // Fjern eksisterende samtykke og vis banner igjen
        localStorage.removeItem('cookie-consent');
        showCookieBanner();
      };

      // Initialiser n√•r DOM er klar
      document.addEventListener('DOMContentLoaded', function() {
        const consent = localStorage.getItem('cookie-consent');
        
        if (consent === 'accepted') {
          window.loadGoogleAnalytics();
        } else if (consent === 'declined') {
          window.disableGoogleAnalytics();
        } else {
          // Vis banner etter 2 sekunder
          setTimeout(showCookieBanner, 2000);
        }
      });
    </script>
    
