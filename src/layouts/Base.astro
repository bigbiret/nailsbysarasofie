    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
    <link rel="icon" type="image/jpeg" href={`${import.meta.env.BASE_URL}logo.jpg`} />
    <link rel="apple-touch-icon" href={`${import.meta.env.BASE_URL}logo.jpg`} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet" />
    
    <!-- Klaro Cookie Consent -->
    <script defer src="https://cdn.kiprotect.com/klaro/v0.7/klaro.js" 
            onerror="console.error('Failed to load Klaro from CDN')"
            onload="console.log('Klaro loaded successfully')"></script>
    <script>
      // Klaro konfigurasjon for GDPR-compliant samtykke
      window.klaroConfig = {
        version: 1,
        elementID: 'klaro',
        noAutoLoad: false,
        htmlTexts: true,
        embedded: false,
        groupByPurpose: true,
        storageMethod: 'localStorage',
        cookieName: 'nails-sara-sofie-klaro',
        cookieExpiresAfterDays: 365,
        default: false,
        mustConsent: true,
        acceptAll: true,
        hideDeclineAll: false,
        hideLearnMore: false,
        
        // Norsk oversettelse
        translations: {
          nb: {
            consentModal: {
              title: 'Informasjonskapsler og personvern',
              description: 'Vi bruker informasjonskapsler for å forbedre din opplevelse på nettsiden vår. Du kan velge hvilke kategorier du ønsker å tillate nedenfor.',
            },
            consentNotice: {
              changeDescription: 'Det har skjedd endringer siden du sist ga samtykke. Vennligst oppdater ditt samtykke.',
              description: 'Vi bruker informasjonskapsler og lignende teknologier for å forbedre din opplevelse. Ved å klikke "Aksepter alle" samtykker du til bruk av alle informasjonskapsler.',
              learnMore: 'Tilpass innstillinger',
              acceptAll: 'Aksepter alle',
              declineAll: 'Avvis alle'
            },
            ok: 'Aksepter',
            save: 'Lagre innstillinger',
            decline: 'Avvis',
            close: 'Lukk',
            acceptAll: 'Aksepter alle',
            acceptSelected: 'Aksepter valgte',
            declineAll: 'Avvis alle',
            app: {
              required: {
                title: 'Nødvendige',
                description: 'Disse informasjonskapslene er nødvendige for at nettsiden skal fungere og kan ikke deaktiveres.'
              },
              analytics: {
                title: 'Analyse',
                description: 'Hjelper oss å forstå hvordan besøkende bruker nettsiden, slik at vi kan forbedre brukeropplevelsen.'
              }
            },
            purposes: {
              analytics: 'Analyse',
              functional: 'Funksjonalitet'
            }
          }
        },
        
        // Tjenester som krever samtykke
        services: [
          {
            name: 'google-analytics',
            title: 'Google Analytics',
            description: 'Webanalyse for å forstå besøksmønstre og forbedre nettsiden.',
            purposes: ['analytics'],
            required: false,
            optOut: false,
            onlyOnce: false,
            default: false,
            cookies: [
              // Google Analytics cookies
              [/^_ga(_.*)?/, '/', 'google-analytics'],
              [/^_gid/, '/', 'google-analytics'],
              [/^_gat/, '/', 'google-analytics']
            ],
            callback: function(consent, service) {
              console.log('Google Analytics consent:', consent);
              if (consent) {
                // Aktiver Google Analytics når samtykke er gitt
                if (typeof window.loadGoogleAnalytics === 'function') {
                  window.loadGoogleAnalytics();
                } else {
                  console.error('loadGoogleAnalytics function not found');
                }
              } else {
                // Deaktiver Google Analytics hvis samtykke trekkes tilbake
                if (typeof window.disableGoogleAnalytics === 'function') {
                  window.disableGoogleAnalytics();
                } else {
                  console.error('disableGoogleAnalytics function not found');
                }
              }
            }
          }
        ]
      };

      // Global funksjon for å laste Google Analytics
      window.loadGoogleAnalytics = function() {
        // Last Google Analytics script
        if (!document.querySelector('script[src*="googletagmanager.com/gtag/js"]')) {
          const script = document.createElement('script');
          script.async = true;
          script.src = 'https://www.googletagmanager.com/gtag/js?id=G-TQKDPTFG2K';
          document.head.appendChild(script);
          
          script.onload = function() {
            // Initialiser Google Analytics
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            window.gtag = gtag;
            
            gtag('js', new Date());
            gtag('config', 'G-TQKDPTFG2K', {
              'anonymize_ip': true,
              'allow_google_signals': false,
              'allow_ad_personalization_signals': false
            });
            
            console.log('✅ Google Analytics aktivert med samtykke');
          };
        } else {
          console.log('ℹ️ Google Analytics allerede lastet');
        }
      };

      // Global funksjon for å deaktivere Google Analytics
      window.disableGoogleAnalytics = function() {
        // Sett Google Analytics disable flag
        window['ga-disable-G-TQKDPTFG2K'] = true;
        console.log('❌ Google Analytics deaktivert');
      };

      // Debug og initialiser Klaro
      console.log('Klaro config loaded:', window.klaroConfig);
      
      document.addEventListener('DOMContentLoaded', function() {
        console.log('DOM loaded, checking for Klaro...');
        
        // Vent til Klaro er tilgjengelig (max 10 sekunder)
        let attempts = 0;
        const maxAttempts = 100;
        
        const checkKlaro = setInterval(() => {
          attempts++;
          
          if (typeof klaro !== 'undefined') {
            clearInterval(checkKlaro);
            console.log('✅ Klaro found! Initializing...');
            
            try {
              klaro.getManager().setLanguage('nb');
              console.log('✅ Klaro language set to Norwegian');
            } catch (error) {
              console.error('❌ Error setting Klaro language:', error);
            }
          } else if (attempts >= maxAttempts) {
            clearInterval(checkKlaro);
            console.error('❌ Klaro failed to load after 10 seconds');
          }
        }, 100);
      });
    </script>
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  </head>
  <body>
    <slot />
    
    <!-- Fallback cookie-notice hvis Klaro feiler -->
    <div id="fallback-cookie-notice" style="display: none; position: fixed; bottom: 0; left: 0; right: 0; background: #F8F4F1; border-top: 1px solid #B9B0A8; padding: 1rem; z-index: 9999; font-family: 'Inter', sans-serif; color: #111111;">
      <div style="max-width: 1200px; margin: 0 auto; display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; gap: 1rem;">
        <div style="flex: 1; min-width: 300px;">
          <strong>🍪 Informasjonskapsler</strong><br>
          <span style="font-size: 0.9rem;">Vi bruker Google Analytics for å forbedre nettsiden. Ønsker du å tillate dette?</span>
        </div>
        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
          <button onclick="acceptCookies()" style="background: #F3C7D7; color: #111111; border: none; padding: 0.75rem 1.5rem; border-radius: 1rem; cursor: pointer; font-weight: 500;">Aksepter</button>
          <button onclick="declineCookies()" style="background: transparent; color: #B9B0A8; border: 1px solid #B9B0A8; padding: 0.75rem 1.5rem; border-radius: 1rem; cursor: pointer;">Avvis</button>
        </div>
      </div>
    </div>

    <script>
      // Fallback functions hvis Klaro feiler
      function acceptCookies() {
        localStorage.setItem('cookie-consent', 'accepted');
        document.getElementById('fallback-cookie-notice').style.display = 'none';
        window.loadGoogleAnalytics();
        console.log('✅ Cookies accepted via fallback');
      }
      
      function declineCookies() {
        localStorage.setItem('cookie-consent', 'declined');
        document.getElementById('fallback-cookie-notice').style.display = 'none';
        console.log('❌ Cookies declined via fallback');
      }
      
      // Sjekk om vi trenger fallback
      setTimeout(() => {
        const hasConsent = localStorage.getItem('cookie-consent');
        const klaroConsent = localStorage.getItem('nails-sara-sofie-klaro');
        
        // Hvis Klaro ikke har lastet OG vi ikke har samtykke fra før
        if (typeof klaro === 'undefined' && !hasConsent && !klaroConsent) {
          console.log('⚠️ Klaro not loaded, showing fallback notice');
          document.getElementById('fallback-cookie-notice').style.display = 'block';
        }
      }, 3000); // Vent 3 sekunder før fallback aktiveres
    </script>
    
    <script src={`${import.meta.env.BASE_URL}src/scripts/modal.js`}></script>
  </body>
</html> 