---
import Layout from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/globals.css';
---

<Layout 
  title="Book time - Nails by Sara Sofie" 
  description="Book din time hos Nails by Sara Sofie. Enkel online booking av neglbehandling i Son, Vestby og Follo."
>
  <Header />
  
  <main class="py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-serif text-center mb-8">Book din time</h1>
      
      <div class="bg-ivory rounded-xl2 shadow-soft p-6">
        <div class="text-center mb-6">
          <p class="text-taupe">Velg ønsket tjeneste og tidspunkt</p>
        </div>
        
        <!-- Fresha booking embed kommer her -->
        <div class="bg-white rounded-lg p-4 min-h-[600px] flex items-center justify-center">
          <div class="text-center">
            <p class="text-taupe mb-4">Fresha booking-widget kommer her</p>
            <p class="text-sm text-taupe">
              Dette vil være en iframe eller script fra Fresha med komplett booking-funksjonalitet
            </p>
          </div>
        </div>
      </div>
      
      <div class="mt-8 text-center">
        <p class="text-sm text-taupe mb-2">Har du spørsmål om booking?</p>
        <a href={`${import.meta.env.BASE_URL}kontakt`} class="text-pink hover:underline">Kontakt oss direkte</a>
      </div>
    </div>
  </main>

  <Footer />
</Layout> 