---
import Layout from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import '../styles/globals.css';

// Gallery images
const galleryImages = [
  'IMG_2285.jpg',
  'IMG_2292.jpg', 
  'IMG_2293.jpg',
  'IMG_2294.jpg',
  'IMG_2295.jpg'
];
---

<Layout 
  title="Galleri - Negldesign fra vår neglesalong i Son | Nails by Sara Sofie"
  description="Se våre vakre negldesign og gelenegler fra Nails by Sara Sofie neglesalong i Son. Inspirasjon for ditt neste besøk hos oss."
>
  <Header />
  
  <main class="py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-serif text-center mb-4">Galleri</h1>
      <p class="text-center text-taupe mb-12 max-w-2xl mx-auto">
        Se eksempler på vårt arbeid fra neglesalong i Son. Her finner du inspirasjon 
        til gelenegler, gellakk og negldesign som vi kan lage for deg.
      </p>
      
      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {galleryImages.map((image, index) => (
          <div class="aspect-square overflow-hidden rounded-xl2 bg-ivory shadow-sm hover:shadow-md transition-shadow">
            <img 
              src={`${import.meta.env.BASE_URL}galleri/${image}`}
              alt={`Negldesign eksempel ${index + 1} fra neglesalong i Son - Nails by Sara Sofie`}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              loading={index < 3 ? "eager" : "lazy"}
            />
          </div>
        ))}
      </div>

      <!-- CTA Section -->
      <section class="text-center mt-16 p-8 bg-pink rounded-xl2">
        <h2 class="text-2xl font-serif mb-4">Liker du det du ser?</h2>
        <p class="mb-6">Book din time hos vår neglesalong i Son og få profesjonell neglbehandling!</p>
        <a 
          href="https://www.fresha.com/nb/book-now/nails-by-sara-sofie-aoar71eq/services?lid=2696667&eid=4757759&share=true&pId=2609801" 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn bg-coal text-ivory hover:bg-coal/90"
        >
          Book time nå
        </a>
      </section>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  // Image gallery functionality
  document.addEventListener('DOMContentLoaded', function() {
    const imageModal = document.getElementById('image-modal');
    const modalImage = document.getElementById('modal-image');
    const closeButton = document.getElementById('close-image-modal');
    const galleryImages = document.querySelectorAll('[data-modal-image]');

    // Open image in modal
    galleryImages.forEach(img => {
      img.addEventListener('click', function() {
        const src = this.getAttribute('data-modal-image');
        const alt = this.getAttribute('data-modal-alt');
        
        modalImage.src = src;
        modalImage.alt = alt;
        imageModal.classList.remove('hidden');
        imageModal.classList.add('flex');
        document.body.style.overflow = 'hidden';
      });
    });

    // Close modal
    function closeModal() {
      imageModal.classList.add('hidden');
      imageModal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }

    closeButton.addEventListener('click', closeModal);
    
    // Close on backdrop click
    imageModal.addEventListener('click', function(e) {
      if (e.target === this) {
        closeModal();
      }
    });

    // Close on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && !imageModal.classList.contains('hidden')) {
        closeModal();
      }
    });
  });
</script> 