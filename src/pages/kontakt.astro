---
import Layout from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import Modal from '../components/Modal.astro';
import '../styles/globals.css';
---

<Layout 
  title="Kontakt oss - Nails by Sara Sofie" 
  description="Kontakt Nails by Sara Sofie. Finn oss i Son, Vestby og Follo. Telefon, e-post og åpningstider."
>
  <Header />
  
  <main class="py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-serif text-center mb-4">Kontakt oss</h1>
      <p class="text-center text-taupe mb-12 max-w-2xl mx-auto">
        Vi gleder oss til å høre fra deg! Kontakt oss for booking eller spørsmål.
      </p>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Contact Information -->
        <div class="space-y-6">
          <Card>
            <h2 class="font-serif text-xl mb-4">Kontaktinformasjon</h2>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-pink" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <div>
                  <p class="font-semibold">Telefon</p>
                  <a href="tel:+47xxxxxxxx" class="text-pink hover:underline">[Telefonnummer kommer her]</a>
                </div>
              </div>
              
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-pink" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <p class="font-semibold">E-post</p>
                  <a href="mailto:post@nailsbysarasofie.no" class="text-pink hover:underline">[E-post kommer her]</a>
                </div>
              </div>
              
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-pink" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <p class="font-semibold">Adresse</p>
                  <p class="text-taupe">[Adresse kommer her]</p>
                  <p class="text-taupe">[Postnummer og sted kommer her]</p>
                </div>
              </div>
            </div>
          </Card>

          <Card>
            <h2 class="font-serif text-xl mb-4">Åpningstider</h2>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span>Mandag</span>
                <span class="text-taupe">[Åpningstider kommer her]</span>
              </div>
              <div class="flex justify-between">
                <span>Tirsdag</span>
                <span class="text-taupe">[Åpningstider kommer her]</span>
              </div>
              <div class="flex justify-between">
                <span>Onsdag</span>
                <span class="text-taupe">[Åpningstider kommer her]</span>
              </div>
              <div class="flex justify-between">
                <span>Torsdag</span>
                <span class="text-taupe">[Åpningstider kommer her]</span>
              </div>
              <div class="flex justify-between">
                <span>Fredag</span>
                <span class="text-taupe">[Åpningstider kommer her]</span>
              </div>
              <div class="flex justify-between">
                <span>Lørdag</span>
                <span class="text-taupe">[Åpningstider kommer her]</span>
              </div>
              <div class="flex justify-between">
                <span>Søndag</span>
                <span class="text-taupe">Stengt</span>
              </div>
            </div>
          </Card>

          <Card>
            <h2 class="font-serif text-xl mb-4">Praktisk informasjon</h2>
            <div class="space-y-3 text-sm">
              <div>
                <h3 class="font-semibold mb-1">Parkering</h3>
                <p class="text-taupe">[Parkeringsinformasjon kommer her]</p>
              </div>
              <div>
                <h3 class="font-semibold mb-1">Kollektivtransport</h3>
                <p class="text-taupe">[Informasjon om kollektivtransport kommer her]</p>
              </div>
              <div>
                <h3 class="font-semibold mb-1">Avbestilling</h3>
                <p class="text-taupe">Vennligst gi beskjed minst 24 timer før avtalt time ved avbestilling.</p>
              </div>
            </div>
          </Card>
        </div>

        <!-- Map and CTA -->
        <div class="space-y-6">
          <!-- Map placeholder -->
          <Card>
            <h2 class="font-serif text-xl mb-4">Finn oss</h2>
            <div class="bg-taupe/20 rounded-lg h-64 flex items-center justify-center">
              <div class="text-center">
                <svg class="w-12 h-12 mx-auto text-taupe mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <p class="text-taupe">Google Maps kommer her</p>
              </div>
            </div>
          </Card>

          <!-- About Sara Sofie -->
          <Card>
            <h2 class="font-serif text-xl mb-4">Om Sara Sofie</h2>
            <div class="space-y-4">
              <div class="w-24 h-24 bg-taupe/20 rounded-full mx-auto flex items-center justify-center">
                <svg class="w-12 h-12 text-taupe" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <p class="text-sm text-taupe text-center">
                [Bio om Sara Sofie kommer her - erfaring, utdanning, filosofi om neglpleie]
              </p>
            </div>
          </Card>

          <!-- Book Time CTA -->
          <div class="text-center p-6 bg-pink rounded-xl2">
            <h2 class="font-serif text-xl mb-3">Klar for å booke?</h2>
            <p class="text-sm mb-4">Book din time enkelt online</p>
            <Button data-modal-open="booking-modal" class="bg-coal text-ivory hover:bg-coal/90">Book time nå</Button>
          </div>
        </div>

      </div>
    </div>
  </main>

  <!-- Booking Modal -->
  <Modal id="booking-modal" title="Book time">
    <div class="text-center py-8">
      <p class="mb-4">Fresha booking-widget kommer her</p>
      <iframe 
        src="about:blank" 
        class="w-full h-[500px] border-0 rounded-lg"
        title="Booking system"
      ></iframe>
    </div>
  </Modal>

  <Footer />
</Layout> 